{
  "name": "mba-telemed-tests",
  "version": "1.0.0",
  "description": "Sistema de Telemedicina - Testes Automatizados",
  "main": "run-payment-tests.js",
  "scripts": {
    "test": "node run-payment-tests.js",
    "test:payment": "node run-payment-tests.js",
    "test:notifications": "node tests/run-notifications-tests.js",
    "test:unit": "jest tests/unit/",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "telemedicine",
    "payment",
    "supabase",
    "mercado-pago",
    "tests"
  ],
  "author": "MBA TeleMed Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "jest-html-reporters": "^3.1.7"
  },
  "dependencies": {
    "node-fetch": "^2.6.7"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "js/**/*.js",
      "tests/**/*.js",
      "!tests/coverage/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
